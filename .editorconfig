# https://editorconfig.org/

root = true

# Defaults - Linux style, 4 spaces
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown uses trailing whitespace to indicate continuation lines
[*.{markdown,md}]
trim_trailing_whitespace = false

# Ruby standard is 2 spaces
[{*.rb,Gemfile,Rakefile,Vagrantfile}]
indent_size = 2

# YAML standard is 2 spaces
[*.{yaml,yml}]
indent_size = 2

# Windows requires CRLF line endings
[*.bat]
end_of_line = crlf
